<!DOCTYPE html>
<html lang="{{ site.lang or 'en' }}" {% if site.dir %}dir="{{ site.dir }}"{% endif %}>
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  {#- Favicon -#}
  {%- if site.favicon %}<link rel="icon" href="{{ site.favicon | escape }}">{% endif %}

  {#- Basic meta tags -#}
  {%- if title %}<title>{{ title | escape }}</title>{% elif site.title %}<title>{{ site.title | escape }}</title>{% endif %}
  {%- if description %}<meta name="description" content="{{ description | escape }}"></meta>{% elif site.description %}<meta name="description" content="{{ site.description | escape }}">{% endif %}
  {%- if keywords %}<meta name="keywords" content="{{ keywords | escape }}"></meta>{% endif %}
  {%- if site.robots %}<meta name="robots" content="{{ site.robots | escape }}"></meta>{% endif %}

  {#- Open Graph tags -#}
  {%- set ogTitle = ogTitle or title or site.title %}
  {%- if ogTitle %}<meta property="og:title" content="{{ ogTitle | escape }}"></meta>{% endif %}
  {%- set ogDescription = ogDescription or description or site.description %}
  {%- if ogDescription %}<meta property="og:description" content="{{ ogDescription | escape }}"></meta>{% endif %}
  {%- set ogImage = ogImage or site.ogImage or site.cover %}
  {%- if ogImage %}<meta property="og:image" content="{{ ogImage | escape }}"></meta>{% endif %}
  {%- set ogUrl = ogUrl or canonicalUrl or site.url %}
  {%- if ogUrl %}<meta property="og:url" content="{{ ogUrl | escape }}"></meta>{% endif %}
  <meta property="og:type" content="{{ (ogType or 'website') | escape }}">

  {#- Twitter Card tags -#}
  <meta name="twitter:card" content="{{ (twitterCard or 'summary_large_image') | escape }}">
  {%- set twitterTitle = twitterTitle or ogTitle %}
  {%- if twitterTitle %}<meta name="twitter:title" content="{{ twitterTitle | escape }}"></meta>{% endif %}
  {%- set twitterDescription = twitterDescription or ogDescription %}
  {%- if twitterDescription %}<meta name="twitter:description" content="{{ twitterDescription | escape }}"></meta>{% endif %}
  {%- set twitterImage = twitterImage or ogImage %}
  {%- if twitterImage %}<meta name="twitter:image" content="{{ twitterImage | escape }}"></meta>{% endif %}

  {#- Canonical URL -#}
  {%- if permalink %}<link rel="canonical" href="{{ site.site }}{{ permalink | escape }}"></meta>{% endif %}

  {#- LLMs.txt reference -#}
  <link rel="llms-txt" href="/llms.txt">

  {#- Styles and custom head code -#}
  {%- if bodyCss %}
  <style id="gjs">
    {{ bodyCss | safe }}
  </style>
  {%- endif %}
  {%- if headCode %}
    {{ headCode | safe }}
  {%- endif %}
  {%- if site.headCode %}
    {{ site.headCode | safe }}
  {%- endif %}
</head>
<body>
  {{ content | safe }}
</body>
</html>
